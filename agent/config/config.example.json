{
  "agent": {
    "version": "1.0.0",
    "server_name": "SRV-EXEMPLO-01",
    "check_interval_minutes": 60,
    "log_level": "INFO",
    "log_retention_days": 30
  },
  "api": {
    "url": "https://dev.gortan.com.br/world/bkpmng",
    "api_key": "sua-api-key-aqui",
    "timeout_seconds": 30,
    "retry_attempts": 3,
