# Bloqueie acesso a arquivos e pastas sens√≠veis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear acesso direto a config/
<DirectoryMatch "^.*config">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# Bloquear acesso direto a app/
<DirectoryMatch "^.*app">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# Bloquear acesso direto a routes/
<DirectoryMatch "^.*routes">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# Disable directory listing
Options -Indexes
