<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # RewriteBase - quando acessado via /world/bkpmng/ (redirecionado da raiz)
    # O base path é /world/bkpmng/ pois é assim que a URL aparece para o usuário
    RewriteBase /world/bkpmng/
    
    # Se for um arquivo real, deixa passar (CSS, JS, imagens, etc.)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Tudo mais vai para index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Bloqueie acesso a arquivos ocultos
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes

# Headers de segurança (se mod_headers estiver disponível)
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>
